<div
  class="alert alert-success d-flex align-items-center justify-content-between"
  role="alert"
>
  <div style="font-size: 1.5rem">
    Bienvenido
    <b
      ><img
        src="<%= userData.avatar %>"
        style="
          border-color: rgb(19, 81, 51);
          border-style: solid;
          border-width: 1px;
          border-radius: 25px;
          width: 50px;
          margin: 0 5px 0 0;
        "
      /><%= userData.nombre %></b
    >
  </div>

  <div class="d-flex align-items-center">
    <span class="me-4">
      <a href="/"
        ><i
          class="bi bi-house"
          style="font-size: 2em; color: rgb(19, 81, 51)"
        ></i
      ></a>
    </span>

    <span>
      <a href="/carrito/cart">
        <i
          class="bi bi-cart2 me-4"
          style="font-size: 2em; color: rgb(19, 81, 51)"
        ></i>
      </a>
    </span>

    <span>
      <form action="/logout" method="get">
        <button
          type="submit"
          style="background: none; padding: 0px; border: none"
        >
          <i
            style="font-size: 2em; color: rgb(19, 81, 51)"
            class="bi bi-box-arrow-right"
          >
          </i>
        </button></form
    ></span>
  </div>
</div>
