<h4>Centro de mensajes</h4>
<h5 id="compresion"></h5>
<form class="bg-dark p-3" action="/mensajes/guardar" method="POST">
  <div class="form-row">
    <div class="col-md-5 mb-2">
      <input
        class="form-control"
        type="email"
        name="email"
        placeholder="Tu email"
        required
      />
    </div>
    <div class="col-md-5 mb-2">
      <input
        class="form-control"
        type="text"
        name="firstname"
        placeholder="Tu nombre"
      />
    </div>
    <div class="col-md-5 mb-2">
      <input
        class="form-control"
        type="text"
        name="lastname"
        placeholder="Tu apellido"
      />
    </div>
    <div class="col-md-5 mb-2">
      <input
        class="form-control"
        type="text"
        name="avatar"
        placeholder="Url del avatar"
      />
      <hr />
    </div>
    <div id="messages"></div>

    <div class="col-md-5 mt-2">
      <input
        class="form-control"
        type="text"
        name="text"
        placeholder="CuÃ©ntanos algo..."
      />
    </div>
  </div>
  <input type="submit" value="Enviar" class="btn btn-primary mt-2 mb-2" />
</form>
